                spacing: dp(12)

                MDCard:
                    id: hab_card_1
                    orientation: "vertical"
                    padding: dp(8)
                    size_hint_y: None
                    height: dp(140)
                    radius: [12]
                    MDLabel:
                        text: "Habitat 1"
                        size_hint_y: None
                        height: dp(20)
                    MDLabel:
                        id: hab_cap_1
                        text: "Lv 0 • Cap 0/0"
                        size_hint_y: None
                        height: dp(20)
                    MDLabel:
                        id: hab_occ_1
                        text: "Occupants: —"
                        size_hint_y: None
                        height: dp(40)
                        text_size: self.size
                        halign: "left"
                        valign: "top"
                    MDRaisedButton:
                        text: "Upgrade"
                        size_hint_y: None
                        height: dp(44)
                        on_release: root.on_upgrade(1)

                MDCard:
                    id: hab_card_2
                    orientation: "vertical"
                    padding: dp(8)
