<BreedingScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(12)
        spacing: dp(12)

        MDLabel:
            text: "Breeding"
            size_hint_y: None
            height: dp(28)

        MDBoxLayout:
            orientation: "horizontal"
            spacing: dp(8)
            size_hint_y: None
            height: dp(44)
            Spinner:
                id: dad_spinner
                text: "Pick Male"
                size_hint_x: 0.5
            Spinner:
                id: mom_spinner
                text: "Pick Female"
                size_hint_x: 0.5

        MDRaisedButton:
            text: "Start"
            size_hint_y: None
            height: dp(44)
            on_release: root.on_start_breeding()

        MDLabel:
            text: "Queue"
            size_hint_y: None
            height: dp(24)

        ScrollView:
            MDBoxLayout:
                id: queue_box
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(8)

<DexScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(12)
        spacing: dp(12)

        MDLabel:
            text: "Dex"
            size_hint_y: None
            height: dp(28)

        ScrollView:
            MDGridLayout:
                id: dex_grid
                cols: 3
                spacing: dp(12)
                size_hint_y: None
                height: self.minimum_height

<ShopScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(12)
        spacing: dp(12)

        MDLabel:
            id: shop_inv
            text: "Food: 0 • Toys: 0"
            size_hint_y: None
            height: dp(24)

        MDBoxLayout:
            orientation: "horizontal"
            spacing: dp(8)
            size_hint_y: None
            height: dp(44)
            MDRaisedButton:
                text: "Buy Food (5)"
                on_release: root.on_buy_food()
            MDRaisedButton:
                text: "Buy Toy (8)"
                on_release: root.on_buy_toy()
