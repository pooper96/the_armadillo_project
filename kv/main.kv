                    height: dp(140)
                    radius: [12]
                    MDLabel:
                        text: "Habitat 2"
                        size_hint_y: None
                        height: dp(20)
                    MDLabel:
                        id: hab_cap_2
                        text: "Lv 0 • Cap 0/0"
                        size_hint_y: None
                        height: dp(20)
                    MDLabel:
                        id: hab_occ_2
                        text: "Occupants: —"
                        size_hint_y: None
                        height: dp(40)
                        text_size: self.size
                        halign: "left"
                        valign: "top"
                    MDRaisedButton:
                        text: "Upgrade"
                        size_hint_y: None
                        height: dp(44)
                        on_release: root.on_upgrade(2)

                MDCard:
                    id: hab_card_3
                    orientation: "vertical"
                    padding: dp(8)
                    size_hint_y: None
                    height: dp(140)
                    radius: [12]
                    MDLabel:
                        text: "Habitat 3"
                        size_hint_y: None
                        height: dp(20)
                    MDLabel:
                        id: hab_cap_3
                        text: "Lv 0 • Cap 0/0"
                        size_hint_y: None
                        height: dp(20)
                    MDLabel:
                        id: hab_occ_3
                        text: "Occupants: —"
                        size_hint_y: None
                        height: dp(40)
